STANC3 ?= stanc3
STANC ?= bin/stanc$(EXE)

$(STANC3):
	git clone https://github.com/stan-dev/stanc3

$(STANC): $(shell find $(STANC3)/src/ -type f -name '*.ml*') $(STANC3)
	cd $(STANC3) && echo "--- Rebuilding stanc ---\n" && dune build @install
	@mkdir -p $(dir $@)
	cp $(STANC3)/_build/default/src/stanc/stanc.exe bin/stanc$(EXE)
